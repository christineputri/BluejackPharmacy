<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/medicineview"
        android:layout_width="85dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/nalgestan" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_toEndOf="@id/medicineview"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="Nalgestan"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manufaturer"
        android:layout_toEndOf="@id/medicineview"
        android:layout_below="@id/name"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:text="Darya Varia Laboratoria"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:layout_toEndOf="@id/medicineview"
        android:layout_below="@id/manufaturer"
        android:textColor="@color/black"
        android:textSize="15dp"
        tools:text="Rp 9.500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/medicineview"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8"/>



</RelativeLayout>
